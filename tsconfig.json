{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "build",
		"rootDir": "src",
		"declaration": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"alwaysStrict": true,
		"typeRoots": [
						"node_modules/@types"
        ]
	},
	"exclude": [
		"node_modules/*",
		"build/*",
		"log/*"
	],
	"include": [
		"src/**/*.ts"
	]
}